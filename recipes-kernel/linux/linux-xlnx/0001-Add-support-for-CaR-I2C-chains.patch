Subject: [PATCH 1/2] Add support for CaR I2C chains.

Signed-off-by: Adrian Fiergolski <adrian.fiergolski@cern.ch>
---
 arch/arm/boot/dts/zynq-zc706.dts | 43 ++++++++++++++++++++++++++++++++++++++++
 1 file changed, 43 insertions(+)

diff --git a/arch/arm/boot/dts/zynq-zc706.dts b/arch/arm/boot/dts/zynq-zc706.dts
index a947d39..b42dc8b 100644
--- a/arch/arm/boot/dts/zynq-zc706.dts
+++ b/arch/arm/boot/dts/zynq-zc706.dts
@@ -139,6 +139,49 @@
 			};
 		};
 
+		//HPC
+		i2c@5 {
+			#address-cells = <1>;
+			#size-cells = <0>;
+			reg = <5>;
+		       	i2cswitch_hpc@71 {
+				    	 compatible = "nxp,pca9846";
+					 #address-cells = <1>;
+				    	 #size-cells = <0>;
+				    	 reg = <0x71>;
+
+					 i2c_hpc@0 {
+					 	compatible = "nxp,pca9846";
+					 	#address-cells = <1>;
+					 	#size-cells = <0>;
+					 	reg = <0>;
+					 };
+			};
+
+		};
+
+		//LPC
+		i2c@6 {
+			#address-cells = <1>;
+			#size-cells = <0>;
+			reg = <6>;
+		       	i2cswitch_lpc@71 {
+
+				    	 compatible = "nxp,pca9846";
+					 #address-cells = <1>;
+				    	 #size-cells = <0>;
+				    	 reg = <0x71>;
+
+					 i2c_lpc@0 {
+					 	compatible = "nxp,pca9846";
+					 	#address-cells = <1>;
+					 	#size-cells = <0>;
+					 	reg = <0>;
+					 };
+			};
+
+		};
+
 		i2c@7 {
 			#address-cells = <1>;
 			#size-cells = <0>;
